<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/row_message_type"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="TYPE"
        android:ellipsize="end"
        android:singleLine="true"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/row_message_originator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Originator"
                android:textSize="12dp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorSecondaryText"
                />

            <TextView
                android:id="@+id/row_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorSecondaryText"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/row_message_amount"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="14dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/row_message_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Card detail"
                android:textSize="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorSecondaryText"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
